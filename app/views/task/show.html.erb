<h2><%= @task.title %></h2>
<h3><%= @task.details %></h3>
<h4>
  <% if @task.completed %>
  <input type="checkbox" checked disabled>
  <% else %>
  <input type="checkbox" disabled>
  <% end %>
  Completed
</h4>
<ul>
  <li>
    <%= link_to "Back to list", tasks_path(@task) %>
  </li>
</ul>

<p> <%= link_to "Edit task", edit_task_path(@task) %></p>
